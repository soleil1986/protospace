.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to prototype_path(prototype) do
      .btn.btn-default ACTION
      = image_tag(prototype.main)
    .caption
      %h3
        = prototype.title
      .proto-meta
        .proto-user
          %p
            = link_to user_path(prototype.user) do
              by
              = prototype.user.username
        .proto-date
          .proto-posted
            = prototype.created_at.strftime("%b %d")
      %ul.proto-tag-list.list-inline
        = link_to "#" do
          %li
            .btn.btn-default iPad
          %li
            .btn.btn-default wireframe
