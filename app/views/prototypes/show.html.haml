.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to user_path(@prototype.user) do
          %img.media-object
            = image_tag(@prototype.user.avatar, style: "width: 64px; height: 64px;", class: "media-object")
      .media-body
        %h4#top-aligned-media.media-heading
          = @prototype.title
        .row
          .col-md-6
            %p
              = link_to user_path(@prototype.user) do
                by
                = @prototype.user.username
    .col-md-6.clearfix
      .likes-box
        #like-link
          = render "likes/like_links", prototype: @prototype
  .row
    .col-md-9
      = image_tag(@prototype.main.image)
    .col-md-3
      - @prototype.sub.each do |sub|
        %ul.proto-sub-list.list-group
          %li.list-group-item
            = image_tag(sub.image)
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.catchcopy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (10)
      %form.form-inline{role: "form"}
        %h4 Write a comment
        .row
          .form-group.col-md-10
            %textarea.form-control{placeholder: "Your comments", rows: "3"}
          .form-group.col-md-2
            %button.btn.btn-primary Comment
