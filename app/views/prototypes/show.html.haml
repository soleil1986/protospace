.container.user-page
  %header.user-nav
    .media
      / .media-left
      /   = link_to user_path(@user) do
      /     %img.media-object{alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", style: "width: 64px; height: 64px;"}/
      .media-body
        %h4#top-aligned-media.media-heading
          = @prototype.title
        .row
          .col-md-6
            %p
              = link_to user_path(@prototype.user) do
                by
                = @prototype.user.username
    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
  .row
    .col-md-9
      = image_tag(@prototype.main)
    .col-md-3
      %ul.proto-sub-list.list-group
        %li.list-group-item
          = image_tag(@prototype.sub_first)
        %li.list-group-item
          = image_tag(@prototype.sub_second)
        %li.list-group-item
          = image_tag(@prototype.sub_third)
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.catchcopy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (10)
      %form.form-inline{role: "form"}
        %h4 Write a comment
        .row
          .form-group.col-md-10
            %textarea.form-control{placeholder: "Your comments", rows: "3"}
          .form-group.col-md-2
            %button.btn.btn-primary Comment
