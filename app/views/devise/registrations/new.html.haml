.container.user-new{action: ""}
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Register
        .user-name_image.row
          .user-name.col-md-10
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              = devise_error_messages!
              = f.text_field :username, placeholder: "Username", autofocus: true
              .user-image.col-md-2
                %button.btn.btn-primary Add image
                = f.file_field :avatar, autofoucus: true
              = f.email_field :email, placeholder: "E-Mail", autofocus: true
              = f.password_field :password, placeholder: "Password", autocomplete: "off"
              .col-md-12
              %h4 Member of
              .user-user-member.row
                .user-name.col-md-12
                  = f.text_field :member, placeholder: "Member", autofocus: true
              %h4 Profile
              .user-user-profile.row
                .user-name.col-md-12
                  = f.text_area :profile, placeholder: "Profile", autofocus: true
              %h4 Works
              .user-name_image.row
                .user-name.col-md-12
                  = f.text_area :works, placeholder: "Works", autofocus: true
              .row.text-center.user-btn
                = f.submit 'Sign Up', class: 'btn btn-lg btn-primary btn-block'
