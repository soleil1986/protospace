= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2 #{@user.errors.count} 件のエラーが出ています
      %ul
        - @user.errors.full_messages.each do |message|
          %li
            = message
  .container.user-new{action: ""}
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :username, placeholder: "Username", autofocus: true
            .user-image.col-md-2.preview{:style => "background-image: url(#{@user.avatar});"}
              %button.btn.btn-primary Change image
              = f.file_field :avatar, autofoucus: true, class: "image"
            = f.email_field :email, placeholder: "E-Mail", autofocus: true
            = f.password_field :password, placeholder: "Password", autocomplete: "off"
        .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member, placeholder: "Member", autofocus: true
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, placeholder: "Profile", autofocus: true
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :works, placeholder: "Works", autofocus: true
        .row.text-center.user-btn
          = f.submit 'SAVE', class: 'btn btn-lg btn-primary btn-block'
