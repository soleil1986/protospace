.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to user_path(@user) do
          %img.media-object{alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", style: "width: 64px; height: 64px;"}/
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            29
            %i Projects
        .proto-user
          %span.degree
            = @user.username
        .row
          .col-md-6
            %h4 Profile
            %p
              = @user.profile
          .col-md-6
            %h4 Works
            %p
              = @user.works
.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to prototype_path(@user) do
            .btn.btn-default ACTION
            = image_tag(prototype.images.main.first.image)
          .caption
            %h3
              = prototype.title
            .proto-meta
              .proto-date
                Apr 26
            %ul.proto-tag-list.list-inline
              = link_to "#" do
                %li
                  .btn.btn-default iPad
                %li
                  .btn.btn-default wireframe
